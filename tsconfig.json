{
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "target": "ES2020",
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "strict": true
    },
    "include": [
        "lib/**/*.ts",
        "lib/index.ts"
    ]
}

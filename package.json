{
  "name": "@valkyriestudios/validator",
  "version": "4.1.0",
  "description": "A lightweight configurable javascript validator",
  "main": "index.js",
  "author": {
    "name": "Peter Vermeulen",
    "email": "contact@valkyriestudios.be",
    "url": "www.valkyriestudios.be"
  },
  "keywords": [
    "utility",
    "library",
    "validation",
    "validator",
    "js",
    "javascript",
    "node"
  ],
  "license": "MIT",
  "scripts": {
    "test": "node --test ./test/src",
    "test:only": "node --test --test-only ./test/src",
    "test:coverage": "c8 node --test ./test/src",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "./node_modules/.bin/eslint --ext .js,.mjs ./src",
    "lint:test": "./node_modules/.bin/eslint --ext .js,.mjs ./test",
    "build": "npm run lint && npm run test:coverage && rm -rf ./dist && mkdir ./dist && npx babel src --out-dir ./dist && npm run build:cleanup",
    "build:cleanup": "npm run build:cleanup:mjs && npm run build:cleanup:src",
    "build:cleanup:mjs": "sed -i \"s/\\.mjs/\\.js/g\" ./dist/**/*.js && sed -i \"s/\\.mjs/\\.js/g\" ./dist/*.js",
    "build:cleanup:src": "sed -i \"s/valkyriestudios\\/utils\\/src/valkyriestudios\\/utils/g\" ./dist/**/*.js && sed -i \"s/valkyriestudios\\/utils\\/src/valkyriestudios\\/utils/g\" ./dist/*.js",
    "codecov": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ValkyrieStudios/validator.git"
  },
  "bugs": {
    "url": "https://github.com/ValkyrieStudios/validator/issues"
  },
  "homepage": "https://github.com/ValkyrieStudios/validator#readme",
  "dependencies": {
    "@valkyriestudios/utils": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.5",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/plugin-syntax-import-assertions": "^7.23.3",
    "@babel/preset-env": "^7.23.5",
    "@babel/register": "^7.22.15",
    "@valkyriestudios/data-continents": "^0.2.0",
    "@valkyriestudios/data-countries": "^0.2.0",
    "@valkyriestudios/data-timezones": "^0.5.0",
    "babel-plugin-transform-minify-booleans": "^6.9.4",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "c8": "^8.0.1",
    "eslint": "^8.55.0"
  }
}
